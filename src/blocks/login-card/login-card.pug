include ../text-input/text-input

mixin login-card({}={})
  .login-card
    .login-card__container
      span.login-card__title Войти
      form.login-card__action-form(
        method,
        action="./registration.html",
        name="login-card"
      )
        .login-card__email
          +text-input({ placeholder: 'Email', name: 'email', type: 'email' })
        .login-card__password
          +text-input({ 
            type: 'password',
            placeholder: 'Пароль',
            name: 'password'
          })
        .login-card__login-btn
          +button({ 
            text: 'Войти',
            type: 'long',
            href: './search-room.html',
            typeMethod: 'submit',
          })
        .login-card__account
          p.login-card__question Нет аккаунта на Toxin?
          .login-card__registration-button
            +button({
              text: 'Создать',
              typeTagLink: true,
              type: 'border',
              href: './registration.html'
            })

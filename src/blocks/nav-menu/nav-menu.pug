mixin nav-menu({ listMenu = [] }={})
  div.nav-menu.js-nav-menu
    ul.nav-menu__container
      each item in listMenu
        li.nav-menu__item.js-nav-menu__item
          if item.submenu
            span.nav-menu__sub-list.js-nav-menu__sub-list(title=item.name tabindex="0") !{item.name}
            span.arrow-expend-more-btn
            ul.nav-menu__submenu.js-nav-menu__submenu
              each itemSubmenu in item.submenu
                li.nav-menu__submenu-item
                  a.nav-menu__submenu-link(href=itemSubmenu.href title=itemSubmenu.name) !{itemSubmenu.name}
          else
            a.nav-menu__link(href= item.href title= item.name) !{item.name}
mixin nav-menu({ listMenu = [] }={})
  div.list
    ul.nav-menu.menu-list
      each item in listMenu
        li.nav-menu__item
          if item.submenu
            span#arrow_li_left.arrow_list_li.nav-menu__link.nav-menu__link--submenu(href=item.href title=item.name) !{item.name}
            ul.submenu
              each itemSubmenu in item.submenu
                li.submenu__item
                  a.submenu__link(href=itemSubmenu.href title=itemSubmenu.name) !{itemSubmenu.name}
          else
            a.nav-menu__link(href= item.href title= item.name) !{item.name}
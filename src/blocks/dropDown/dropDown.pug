mixin dropDown({placeholder = 'Сколько Гостей',isOpen = false, showFunction,btnTypeMinus, list = []}={})
    .dropDown.js-dropDown
        .dropDown__name.js-dropDown__name
            input.dropDown__counte-guests.js-dropDown__counte-guests(placeholder=placeholder readonly value="")
            .dropDown__arrow.dropdown-arrow
        .dropDown__drop-block.js-dropDown__drop-block(class= isOpen ? 'js-drop-open' : 'js-drop-close')
            .dropDown__items.js-dropDown__items
                each element in list
                    .dropDown__row
                        h3.dropDown__dropItem #{element.name}
                        .dropDown__block-input.js-dropDown__block-input
                            button.dropDown__circle.dropDown__circle-minus.js-dropDown-minus(data-button-type=element.btnTypeMinus) -
                            input.dropDown__counter(value= element.value || 0 readonly) 
                            button.dropDown__circle.dropDown__circle-plus.js-dropDown-plus +
                    if showFunction
                        .dropDown__function
                            button.dropDown__function-clear Очистить
                            button.dropDown__function-apply Применить
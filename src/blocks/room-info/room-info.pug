include ../stars/stars.pug

mixin room-info(params = {})
  -
    const {
      link = 'room-details.html',
      number = 888,
      formatSize='default',
      level = 'Люкс',
      price = '9 990',
      stars = 5,
      review = 145,
      sliders = [
        {src: 'assets/img/rooms/room-888.png', alt: 'room №888'},
        {src: 'assets/img/rooms/room-888.png', alt: 'room №888'},
        {src: 'assets/img/rooms/room-888.png', alt: 'room №888'}
      ]
    } = params
    const size = `room-info_${formatSize}`;

  .room-info.js-room-info(class=[size])
    .room-info__container
      .room-info__slider-rooms.js-slider-rooms
        each slider in sliders 
          img.room-info__photo(src=slider.src, alt=slider.alt)
    .room-info__link
      .room-info__link-container
        a.room-info__head-room(href=link)
          span.room-info__number-room №#{ number }
            span.room-info__level #{ level }
          span.room-info__price #{ price }₽
            span.room-info__price-day !{ ' в сутки' }
        .room-info__rating
          .room-info__star
            +stars({ stars: stars, readonly: true }) 
          span.room-info__feedback #{ review }
            span.room-info__feedback-txt !{' Отзывов'} 


mixin dropBlock()
    div.dropBlock.hide
        div.dropBlock__items
            div.dropBlock__row
                h3#dropItem1.dropItem Взрослые
                div.dropBlock__block-input.dropBlock__block-input1  
                    button.dropBlock__circle.dropBlock__circle-minus1 -
                    input#counter1.dropBlock__counter(type="text" value="0" readonly)
                    button.dropBlock__circle.dropBlock__circle-plus1 +
            div.dropBlock__row
                h3#dropItem2.dropItem Дети
                div.dropBlock__block-input.dropBlock__block-input2 
                    button.dropBlock__circle.dropBlock__circle-minus2 -
                    input#counter2.dropBlock__counter(type="text" value="0" readonly)
                    button.dropBlock__circle.dropBlock__circle-plus2 +
            div.dropBlock__row
                h3#dropItem3.dropItem Младенцы
                div.dropBlock__block-input.dropBlock__block-input3 
                    button.dropBlock__circle.dropBlock__circle-minus3 -
                    input#counter3.dropBlock__counter(type="text" value="0" readonly)
                    button.dropBlock__circle.dropBlock__circle-plus3 +
            div.dropBlock__function
                button#clear.dropBlock__function-link ОЧИСТИТЬ
                button#apply.dropBlock__function-link ПРИМЕНИТЬ
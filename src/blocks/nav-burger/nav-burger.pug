mixin nav-burger({ navLinks = [] }={})
  .nav-burger.js-nav-burger
    button.nav-burger__line_top-position
    button.nav-burger__line_center-position
    button.nav-burger__line_bottom-position
    ul.nav-burger__menu-burger.js-menu-burger
      each item in navLinks
        li.nav-burger__item
          a.nav-burger__link(href=item.link)= item.title

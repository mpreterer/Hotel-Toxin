extends ../../../template-head/main_index.pug
include ../../../blocks/header/header.pug
include ../../../blocks/dropDown/dropDown.pug
include ../../../blocks/footer/footer.pug
include ../../../blocks/calendar/calendar.pug
include ../../../blocks/about-room/about-room.pug
include ../../../blocks/impressions-room/impressions-room.pug

block variables 
    - pageTitle = '«Toxin» | Номер для вас'

block content
    div.content_room_details
        div.container_room_loop
            div.room_loop1
            div.room_loop_head
                div.room_loop2
                div.room_loop3
        div.expend_details_room
            div.container_expend_details_room
                div.container_split
                    div.container_split_details
                        div.container_expend_details
                            +about-room({
                               list: [
                                   {
                                        firstAdvantage: 'Комфорт',
                                        secondAdvantage: 'Шумоподавляющие стены',
                                        src: '../../assets/image/insert_emoticon.svg'
                                   },
                                   {
                                        firstAdvantage: 'Удобство',
                                        secondAdvantage: 'Окно в каждой из спален',
                                        src: '../../assets/image/location_city.svg'
                                   },
                                   {
                                        firstAdvantage: 'Уют',
                                        secondAdvantage: 'Номер оснащён камином',
                                        src: '../../assets/image/whatshot.svg'
                                   }
                               ]
                            })
                            div.impressions_room
                               +impressions-room
                        div.user_reviews
                            h2 Отзывы посетителей номера
                            span.otziv 2 отзыва 
                            ul.ul_reviews
                                li.avatars.avatar_1
                                    span.head Мурад Сарафанов 
                                    span 5 дней назад 
                                li.text_reviews_1.text_reviews
                                    button.heart
                                        div.fa_heart
                                        span.span_heart 12 
                                    span Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей. 
                                li.avatars.avatar_2
                                    span.head Патрисия Стёклышкова 
                                    span Неделю назад 
                                
                                li.text_reviews_2.text_reviews
                                    button.heart
                                        div.fa_heart
                                        span.span_heart 2
                                    span Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент 
                    div.booking
                        div.container
                            div.head
                                h2 № 888 люкс 
                                p 9 990₽ в сутки 
                            div.booking_arrival
                                div.container_arrival
                                    h2 прибытие
                                    input#first_date2(type="text"
                                                            data-range="true" 
                                                            data-multiple-dates-separator=" - "
                                                            placeholder="ДД.ММ.ГГГГ"
                                                            readonly)
                                div.container_departure
                                    h2 выезд
                                    input#second_date2(type="text" 
                                                        data-language="ru"
                                                        placeholder="ДД.ММ.ГГГГ"
                                                        readonly)
                                    div.arrow
                            div.booking_guests
                                h2 гости
                                +dropDown

                            div.booking_price
                                div.container_block1
                                    span 9 990₽ х 4 суток 
                                    span 39 960₽ 
                                div.container_block2
                                    span.span_container Сбор за услуги: скидка 2 179₽ 
                                    span 0₽ 
                                div.container_block3
                                    span.span_container(style="width:214px;") Сбор за дополнительные услуги.
                                    span 300₽ 
                            div.result
                                h2 Итого
                                h2 38 081₽
                            div.to_book
                                +button({
                                    text: 'Забронировать',
                                    href: 'Registration.html',
                                    type: 'long'
                                })
                div.order_rooms
                    div.container
                        div.order
                            h2 Правила
                            ul.ul_order
                                li.li_order1 Нельзя с питомцами 
                                li.li_order2 Без вечеринок и мероприятий
                                li.li_order3
                                    span Время прибытия — после 13:00
                                        span а выезд до 12:00  
                        div.cancel
                            h2(style="margin-bottom:19px;") Отмена
                            p(style="margin-top:0; color:rgba(31,32,65,0.75);") Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги. 
extends ../../../template-head/main-index.pug
include ../../../blocks/calendar/calendar.pug
include ../../../blocks/filter/filter.pug

block variables
    - pageTitle = 'Главная «Toxin» | Отели'
    - roomsList = require('./utils/index-backgrounds.json');

block content
    main.index-main.js-index-main(style="background-image: url('assets/image/background-index-1.jpg');", data-src= roomsList)
        .index-main__container
            .index-main__filter-item.js-filter-item
                +filter({
                    title:'Найдём номера под ваши пожелания',
                    buttonOptions: {
                        href:'search-room.html',
                        type:'long',
                        text:'Подобрать номер',
                    },
                    dropDownOptions: {
                        isOpen: false,
                        list: [
                            { name: 'взрослые', val: 0 },
                            { name: 'дети', val: 0 },
                            { name: 'младенцы', val: 0 }
                        ],
                        appointment: 'guests',
                        showFunction: true,
                        keyPhrases: ['гость', 'гостя', 'гостей']
                    },
                })
            p.index-main__description Лучшие номера для вашей работы, отдыха и просто вдохновения
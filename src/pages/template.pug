      isLoggedIn: false, 
      links: [
        { text: 'О нас' },
        { text: 'Услуги', isDropdown: true },
        { text: 'Вакансии'  },
        { text: 'Новости' },
        { text: 'Соглашения', isDropdown: true },
      ],
      loginButtonText: 'Войти',
      registerButtonText: 'Зарегистрироваться',
    })


extends ../template-head/main_roomDetails.pug

block header
    include header-all.pug
block content
    div.content_room_details
        div.container_room_loop
            div.room_loop1
            div.room_loop_head
                div.room_loop2
                div.room_loop3
        div.expend_details_room
            div.container_expend_details_room
                div.container_expend_details
                    div.room_information
                        h2 Сведения о номере
                        ul.ul_room
                            li#li_room1
                                p
                                    b Комфорт
                                p Шумопоглощающие стены 
                            hr 
                            li#li_room2
                                p
                                    b Удобство 
                                p Окно в каждой из спален 
                            hr 
                            li#li_room3
                                p
                                    b Уют  
                                p Номер оснащён камином 
                    div.impressions_room
                        h2 Впечатления от номера
                        div.container_impressions
                            div.container_donut
                                canvas#chart(width="120" height="120")
                                div.comments-count 
                                    p 260
                                    p Голосов
                            div.impressions_list
                                ul.ul_impressions
                                    li#li_impressions1 Великолепно 
                                    li#li_impressions2 Хорошо 
                                    li#li_impressions3 Удовлетворительно 
                                    li#li_impressions4 Разочарован 
                div.user_reviews
                    h2 Отзывы посетителей номера
                    span.otziv 2 отзыва 
                    ul.ul_reviews
                        li.avatars.avatar_1
                            span.head Мурад Сарафанов 
                            span 5 дней назад 
                        li.text_reviews_1.text_reviews
                            div.heart.heart_1
                                div.fa_heart
                                span 12 
                            span Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей. 
                        li.avatars.avatar_2
                            span.head Патрисия Стёклышкова 
                            span Неделю назад 
                        
                        li.text_reviews_2.text_reviews
                            div.heart.heart_2
                                div.fa_heart.fa_heart2
                                span#span_heart 2 
                            span Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент 
                div.order_rooms
                    div.container
                        div.order
                            h2 Правила
                            ul.ul_order
                                li.li_order1 Нельзя с питомцами 
                                li.li_order2 Без вечеринок и мероприятий
                                li.li_order3
                                    span Время прибытия — после 13:00
                                        span а выезд до 12:00  
                        div.cancel
                            h2(style="margin-bottom:19px;") Отмена
                            p(style="margin-top:0; color:rgba(31,32,65,0.75);") Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги. 
                div.booking
                    div.container
                        div.head
                            h2 № 888 люкс 
                            p 9 990₽ в сутки 
                        div.booking_arrival
                            div.container_arrival
                                h2 прибытие
                                div.date_arrival ДД.ММ.ГГГГ
                                div.arrow

                            div.container_departure
                                h2 выезд
                                div.date_departure ДД.ММ.ГГГГ
                                div.arrow
                                
                        div.booking_guests
                            h2 гости
                            div.guests
                                input.counte_guests(placeholder="Сколько Гостей" autocomplete="off" readonly="")
                            div.arrow

                            include ../modules/dropBlock.pug

                        div.booking_price
                            div.container_block1
                                span 9 990₽ х 4 суток 
                                span 39 960₽ 
                            div.container_block2
                                span.span_container Сбор за услуги: скидка 2 179₽ 
                                span 0₽ 
                            div.container_block3
                                span.span_container(style="width:214px;") Сбор за дополнительные услуги.
                                span 300₽ 
                        div.result
                            h2 Итого
                            h2 38 081₽
                        a(href="login.html")
                            div.to_book
                                p забронировать 
block footer
    include footer_all.pug